#include <iostream>
using namespace std;

int main() {
    const int MAX_SIZE = 100;// макс размер строки (буфера)
    char str[MAX_SIZE];// объявл массив символов для хранения
    // ввод строки от пользователя
    cout << "Введите строку: ";
    cin.getline(str, MAX_SIZE);// ввод строки с пробелами
    
    // 1. определяем длину строки 
    int length = 0;
    // проход по массиву пока не встретим нуль-терминатор '\0'
    while (str[length] != '\0') {
        length++;// увелич счетчик для каждого символа
    }
    cout << "Длина строки: " << length << endl;
    
       // 2. ПЕРЕВОРАЧИВАЮ СТРОКУ НА МЕСТЕ (in-place algorithm)
    for (int i = 0; i < length / 2; i++) {
        // меняю местами симметричные элементы относительно центра
        char temp = str[i];// СОХРАНЯЮ левый элемен
        str[i] = str[length - 1 - i];// левый элемент = правый
        str[length - 1 - i] = temp;// правый элемент = сохраненный левый
    }
    cout << "Перевернутая строка: " << str << endl;
    
    // 3. Подсчет символов
    char target;// переменная для хранения искомого символа
    cout << "Введите символ для поиска: ";
    cin >> target;// ввод символа для поиска
    
    int count = 0;// счетчик найденных символов
    // проходим по всей строке
    for (int i = 0; i < length; i++) {
        if (str[i] == target) count++;// если нашли нужный символ, увеличиваем счетчик
    }
    cout << "Символ '" << target << "' встречается " << count << " раз" << endl;
    
    return 0;
}
