#include <iostream>
using namespace std;

int main() {
    const int SIZE = 10;
    int arr1[SIZE];// первый массив
    int arr2[SIZE];// второй массив (для копирования в обратном порядке)
    
    // 1. Заполняем массив числами Фибоначчи через указатели
    int* ptr = arr1;// ptr1 указывает на начало arr1
    *ptr = 0;       // первый элемент
    *(ptr + 1) = 1; // второй элемент
    // ЗАПОЛНЕНИЕ ПЕРВОГО МАССИВА через указатель
    for (int i = 2; i < SIZE; i++) {
        *(ptr + i) = *(ptr + i - 1) + *(ptr + i - 2);
    }
    
    // 2. Сумма элементов через указатели
    int sum = 0;// переменная для накопления суммы
    for (int i = 0; i < SIZE; i++) {
        sum += *(ptr + i);// добавляю каждый элемент к сумме
    }
    
    // 3. Минимальный элемент через указатели
    int min = *ptr;
    for (int i = 1; i < SIZE; i++) {
        if (*(ptr + i) < min) {
            min = *(ptr + i);// обновляю минимум, если нашли меньший элемент
        }
    }
    
    // 4. Копирование в обратном порядке через указатели
    int* ptr2 = arr2;// создаю второй указатель на начало массива arr2
    for (int i = 0; i < SIZE; i++) {
        *(ptr2 + i) = *(ptr + (SIZE - 1 - i));// копирую из конца первого массива в начало второго
    }
    
    // Вывод результатов
    cout << "Исходный массив: ";
    for (int i = 0; i < SIZE; i++) {
        cout << *(ptr + i) << " ";
    }
    cout << endl;
    
    cout << "Сумма элементов: " << sum << endl;
    cout << "Минимальный элемент: " << min << endl;
    
    cout << "Массив в обратном порядке: ";
    for (int i = 0; i < SIZE; i++) {
        cout << *(ptr2 + i) << " ";// вывод через разыменование указателя
    }
    cout << endl;
    
    return 0;
}
