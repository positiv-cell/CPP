#include <iostream>
using namespace std;

// 1. передача по значению - НЕ РАБОТАЕТ// параметры передаются как копии, оригинальные переменные не меняются
void swapByValue(int a, int b) {
    int temp = a;// сохран значение a во временной переменной
    a = b;// приписываю a значение b (работаем с копией)
    b = temp;// приписываю b сохраненное значение (работаем с копией)
    cout << "Внутри swapByValue: a = " << a << ", b = " << b << endl;
}

// 2. Передача по указателю - РАБОТАЕТ
void swapByPointer(int* a, int* b) {
    int temp = *a;// разыменовываю указатель a - получаем значение
    *a = *b;// по адресу a записываем значение по адресу b
    *b = temp;// по адресу b записываем сохраненное значение
    // Изменения сохраняются, так как работаем с оригинальными переменными

}

// 3. Передача по ссылке - РАБОТАЕТ
// Ссылки - это "псевдонимы" переменных, работаем как с оригиналами
void swapByReference(int& a, int& b) {
    int temp = a;// Работаю напрямую с оригинальными переменными
    a = b;// присваиваю a значение b
    b = temp;// присваиваю b сохраненное значение
    // Изменения сохраняются, так как a и b - ссылки на оригиналы
}

int main() {
    int x = 5, y = 10;
    
    cout << "Исходные значения: x = " << x << ", y = " << y << endl << endl;
    
    // 1. По значению
    cout << "1. Передача по ЗНАЧЕНИЮ:" << endl;
    cout << "До вызова: x = " << x << ", y = " << y << endl;
     // тестирую обмен по значению (не сработает)
    swapByValue(x, y);
    cout << "После вызова: x = " << x << ", y = " << y << " ← НЕ ИЗМЕНИЛИСЬ!" << endl;
    cout << "Вывод: при передаче по значению создаются копии, оригиналы не меняются" << endl << endl;
    
    // 2. По указателю
    cout << "2. Передача по УКАЗАТЕЛЮ:" << endl;
    cout << "До вызова: x = " << x << ", y = " << y << endl;
    // тестирую обмен по указателю (сработает)
    swapByPointer(&x, &y);  // Передаем АДРЕСА переменных
    cout << "После вызова: x = " << x << ", y = " << y << " ← ИЗМЕНИЛИСЬ!" << endl;
    cout << "Вывод: работаем напрямую с памятью переменных" << endl << endl;
    
    // 3. По ссылке
    cout << "3. Передача по ССЫЛКЕ:" << endl;
    cout << "До вызова: x = " << x << ", y = " << y << endl;
    // тестирую обмен по ссылке (сработает)  
    swapByReference(x, y);  // Передаем сами переменные
    cout << "После вызова: x = " << x << ", y = " << y << " ← ИЗМЕНИЛИСЬ!" << endl;
    cout << "Вывод: ссылки - это псевдонимы оригинальных переменных" << endl;
    
    return 0;
}
