#include <iostream>
using namespace std;
// - int* arr указатель на первый элемент массива
// - int size количество элементов в массиве
void arrayInfo(int* arr, int size) {
    cout << "\n=== ИНФОРМАЦИЯ О МАССИВЕ ===" << endl;
    
    // Выводим размер массива
    cout << "Размер массива: " << size << " элементов" << endl;
    
    // 1. ВЫЧИСЛЕНИЕ СУММЫ ВСЕХ ЭЛЕМЕНТОВ МАССИВА
    int sum = 0;  // переменная для накопления суммы
    
    // прохожу по всем элементам массива
    for (int i = 0; i < size; i++) {
        sum += arr[i];  // добавл текущий элемент к общей сумме
        // arr[i] - доступ к i-му элементу через оператор индексации
        
    cout << "Сумма элементов: " << sum << endl;
    
    
    cout << "Первый элемент: " << arr[0] << endl;
    cout << "Последний элемент: " << arr[size - 1] << endl;
    
    // 4. ДОПОЛНИТЕЛЬНО: ВЫВОД ВСЕХ ЭЛЕМЕНТОВ МАССИВА
    cout << "Все элементы массива: ";
    for (int i = 0; i < size; i++) {
        cout << arr[i] << " ";  // Выводим каждый элемент через пробел
    }
    cout << endl;
    
    cout << "=============================" << endl;
}

int main() {
    // ДЕМОНСТРАЦИЯ УНИВЕРСАЛЬНОСТИ ФУНКЦИИ arrayInfo
    
    // ПЕРВЫЙ МАССИВ 5 элементов
    int arr1[5] = {1, 2, 3, 4, 5};
    // arr1 - автоматически преобразуется в указатель на первый элемент
    // 5 - явно передаем размер массива
    arrayInfo(arr1, 5);
    
    // ВТОРОЙ МАССИВ 3 элемента
    int arr2[3] = {10, 20, 30};
    // Вызываем ту же самую функцию для второго массива
    arrayInfo(arr2, 3);
    
    // ТРЕТИЙ МАССИВ 1 элемент (демонстрация граничного случая)
    int arr3[1] = {42};
    arrayInfo(arr3, 1);
    
    // ЧЕТВЕРТЫЙ МАССИВ пустой (демонстрация обработки особого случая)
    int arr4[0] = {};  // массив нулевого размера
    
    
    return 0;  
}
